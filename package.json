{
    "name": "rake-runner",
    "displayName": "Rake Runner",
    "description": "Run Rake tasks with a single click directly in your editor",
    "version": "0.0.1",
    "publisher": "Mehak10",
    "icon": "images/rakefly_logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/MehakNadeem/rakefly"
    },
    "engines": {
        "vscode": "^1.82.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:ruby",
        "onLanguage:rake"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Rake Runner",
            "properties": {
                "rakeRunner.debugMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable debug logging in console"
                }
            }
        },
        "commands": [
            {
                "command": "rake-runner.executeTask",
                "title": "Run Rake Task"
            }
        ],
        "languages": [
            {
                "id": "rake",
                "aliases": [
                    "Rakefile"
                ],
                "filenames": [
                    "Rakefile",
                    "*.rake"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.82.0",
        "mocha": "^11.5.0",
        "typescript": "^4.9.5"
    }
}
